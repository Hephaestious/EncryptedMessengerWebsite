@{
    ViewBag.Title = "Home Page";
}

@Scripts.Render("~/bundles/messaging")

<style>
     #chats-container {
         height: 100%; 
         margin-bottom: 0; 
         padding: 0;
     }
    .request-input {
        padding: 0; 
        margin-top: 0;
    }
    .table-container {
        height: 45%; 
        margin-top: -1%; 
        margin-bottom: 1%; 
        padding: 0; 
        margin-left: -3%;
    }
    .table-header {
        margin: 1.25%; 
        height: 12%; 
        width: 97.5%;
    }
    .table-body {
        margin: 1.25%; 
        height: 79%; 
        width: 97.5%; 
        overflow-y: auto; 
        margin-top: 2.5%;
    }
    #ChatBox {
        width: 40%; 
        height: 500px;
        margin: 0;
        padding: 0;
    }
    .chat-messages {
        margin: 0; 
        height: 97.5%; 
        width: 97.5%; 
        overflow-y: auto;
        display: none;
    }
    .chat-messages.active {
        display: block;
    }
    .sent-message-box {
        float: right; 
        height: auto;
        max-width: 80%; 
        padding-bottom: -2%; 
        margin-bottom: 1%; 
        clear: both;
        background-color: #dfd1b9;
    }
    .sent-message {
        text-align: right; 
        float: right; 
        width: 100%;
        font-size: 16pt;
        word-wrap: break-word;
    }
    .received-message-box {
        float: left; 
        height: auto; 
        max-width: 80%; 
        padding-bottom: -2%; 
        margin-bottom: 1%; 
        clear: both;
        background-color: #efe8dc;
    }
    .received-message {
        text-align: left; 
        float: left; 
        width: 100%;
        font-size: 16pt;
        word-wrap: break-word;
    }
</style>
<ul id="errors"></ul>
<div class="row" style="width: 100%; height: 100%; margin-left: 2%;">
    <div id="Users" class="col-lg-3 well-lg" style="height: 500px;">
        <div class="row well table-container">
            <div class="table-header">
                <table id="ChatsHeader" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Open Chats</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="table-body">
                <table id="chats-box" class="table table-striped table-hover">
                    <tbody id="chats"></tbody>
                </table>
            </div>
        </div>
        <div class="row well table-container">
            <div class="table-header">
                <table id="RequestsHeader" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Chat Requests</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="table-body">
                <table id="requests-box" class="table table-striped table-hover">
                    <tbody id="requests"></tbody>
                </table>
            </div>
        </div>
        <div class="col-md-8 request-input" style="margin-left: -3%;">
            <input id="request-input" class="form-control input-sm" type="text" style="width: 100%" maxlength="256" />
        </div>
        <div class="col-md-3 request-input">
            <button id="request-button" class="btn btn-primary btn-sm" style="margin-left: 0;">Request Chat</button>
        </div>
    </div>
    <div id="ChatBox" class="col-lg-10 well">
        <div class="row" style="height: 5%; width: 100%; background-color: #dff0d8; padding: 0; margin: 0;"></div>
        <div class="row" style="height: 75%; margin: 0; width: 100%; padding: 0;">
            <div id="chats-container" style="width: 100%; margin: 0">
            </div>
        </div>
        <div id="InputBox" class="row" style="height: 20%; margin: 0; padding:0;">
            <div class="col-md-10" style="margin-left: 0;">
                <div style="height: 50px;">
                    <textarea id="MessageInput" class="form-control" rows="2" style="resize: none; min-width: 100%; height: 100%; font-size: 12pt; overflow-y: hidden" maxlength="80"></textarea>
                </div>
            </div>
            <div class="col-md-2" style="margin-bottom: 0;">
                <div style="height: 50px;">
                    <button id="MessageBtn" class="btn btn-success btn-sm" style="float: right; width: 100%; height: 100%;">Send</button>
                </div>
            </div>
        </div>
    </div>
</div>
